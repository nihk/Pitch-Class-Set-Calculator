<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="30dp"
              android:paddingLeft="30dp"
              android:paddingEnd="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@drawable/list_item_child_key_background"
    >

    <TextView
        android:id="@+id/child_prime_form_key"
        android:text="@string/prime_form_key"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        />
    <TextView
        android:id="@+id/child_forte_number_key"
        android:text="@string/forte_number_key"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />
    <TextView
        android:id="@+id/child_inteval_vector_key"
        android:text="@string/interval_vector_key"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/child_transpositional_symmetry_key"
        android:text="@string/tn_sym_key"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/child_inversional_symmetry_key"
        android:text="@string/in_sym_key"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        />

</LinearLayout>