<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/setListParentLayout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:padding="10dp"
              android:background="@color/formsBackground"
    >

    <TextView
        tools:text="Tetrachords"
        android:id="@+id/parent_cardinality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="@color/formsTextColor"
        />
    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/parent_arrow_dropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:layout_weight="1"/>

</LinearLayout>