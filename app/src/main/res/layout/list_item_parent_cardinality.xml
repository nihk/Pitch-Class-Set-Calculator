<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/setListParentLayout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:layout_marginTop="10dp"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:background="@drawable/list_item_parent_background"
    >

    <TextView
        tools:text="Tetrachords"
        android:id="@+id/parent_cardinality"
        android:layout_width="0dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center_vertical"
        android:textColor="@color/formsTextColor"
        />
    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/parent_arrow_dropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:layout_gravity="center_vertical|end"
        android:layout_weight="1"/>

</LinearLayout>